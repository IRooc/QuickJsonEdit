@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post" asp-page-handler="ListFiles">
    <label>Enter Folder Path
        <input type="text" name="folder" required value="@Model.FolderPath" />
    </label>
    <button type="submit">List Files</button>
</form>

@if (Model.JsonFiles?.Any() == true)
{
    <h3>Choose a JSON file to edit:</h3>
    <ul>
        @foreach (var file in Model.JsonFiles)
        {
            <li>
            <form method="post" asp-page-handler="GotoEdit">
                <input type="hidden" name="file" value="@file" />
                <button type="submit">@System.IO.Path.GetFileName(file)</button>
            </form>
            </li>
        }
    </ul>
}
else if (Model.FolderPath != null)
{
    <p>No JSON files found in folder.</p>
}